<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bashayer93.regblue.mainReg"
    tools:showIn="@layout/activity_main_reg">
    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Register As a Residentt"
        android:id="@+id/reg_as_r"
        android:textColor="#ffffff"
        android:background="#999999"
        android:layout_marginTop="98dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:onClick="resReg"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Register As a Dependent"
        android:id="@+id/reg_as_d"
        android:textColor="#ffffff"
        android:background="#999999"
        android:onClick="depReg"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/reg_as_r"
        android:layout_centerHorizontal="true"
        android:textSize="22dp" />


</RelativeLayout>
